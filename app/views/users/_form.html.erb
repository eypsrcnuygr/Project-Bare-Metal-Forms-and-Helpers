<%= form_for @user do |user| %>
  Your username here : <%= user.text_field :username, placeholder: "Your username here" %><br />
  Your email here : <%= user.email_field :email, placeholder: "Your email here" %><br />
  Your password here : <%= user.password_field :password, placeholder: "Your password here" %><br />
  <%= user.submit %>
<% end %>